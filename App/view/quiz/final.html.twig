{% extends "base.html.twig" %}

{% block title %} - select Questions{% endblock %}
{% block head %}

{% endblock %}
{% block content %}
    <form method="post">
        <div class="row">
            <div class="container-fluid text-center my-4">
                <h3 class="text-decoration-underline text-bold">Übersicht beantwortete Fragen {{ question.id }}</h3>
            </div>
            <div class="col-1">

            </div>
            <div class="col-7 w-60 bg-light rounded-3 my-1 mx-5 p-2 align-self-center">
                <div class="row align-self-center mx-5 pb-2">
                    <p> Design needs to be implemented</p>
                </div>
            </div>


            <div class="container-flex p-1 m-1">
                <div class="row p-2 m-2">
                    <div class="col-lg-4 text-center">
                        <label>
                            <input type="submit" name="reset" class="align-self-center btn-lg btn-info shadow-sm"
                                   value="Fragen nochmals prüfen">
                        </label>
                    </div>

                    <div class="col-lg-3 text-center">
                        <label>
                            <input type="submit" name="confirm" class="align-self-center btn-lg btn-info shadow-sm"
                                   value="Quiz auswerten">
                        </label>
                    </div>
                </div>
            </div>
            <div class="col-2">
            </div>
        </div>
    </form>
{% endblock %}
