{% extends "base.html.twig" %}

{% block title %} - select Questions{% endblock %}
{% block head %}
    <link href="/assets/css/selectQuestions.css" rel="stylesheet">
    <script src="/assets/js/selectQuestions.js"></script>
{% endblock %}
{% block onload %}
    initSelectQuestions();
{% endblock %}
{% block subtitle %}
    Auswahl Fragen
{% endblock %}
{% block fornAction %}
    /quizQuestion/select
{% endblock %}
{% block contentleft %}
    <div id="jsDataCategories" data-content="{{ jsData }}" hidden="hidden"></div>
    <div class="row p-2 m-2">
        <div class="col-lg-1 align-items-right text-right">
            <div class="form-check form-switch align-items-middle">
                <input class="form-check-input" type="checkbox" role="switch" id="categoryAll" checked>
                <label class="form-check-label" for="categoryAll"></label>
            </div>
        </div>
        <div class="col-lg-2 text-start">
            <p>Select / Unselect All</p>
        </div>
        <div class="col-lg-6 text-center">
            <p> Category </p>
        </div>
        <div class="col-lg-1"></div>
        <div class="col-lg-2 text-start">
            <p>Fragen in Category</p>
        </div>
    </div>
    {% for category in categories %}
        <div class="row  p-2 m-2">
            <div class="col-lg-1 align-items-right">
                <div class="form-check form-switch align-middle">
                    <label class="form-check-label" for="categorySwitch{{ category.id }}">
                        <input type="hidden" id="maxQuestions{{ category.id }}" value="{{ category.number }}">
                        <input class="categories form-check-input" id="categorySwitch{{ category.id }}"
                               name="categories[]" type="checkbox" role="switch" value="{{ category.id }}"
                               checked>
                    </label>
                </div>
            </div>
            <div class="col-lg-1"></div>
            <div class="col-lg-7 bg-info rounded-3 text-left">
                {{ category.text }}
            </div>
            <div class="col-lg-1"></div>
            <div class="col-lg-2 bg-info rounded-3 text-end">
                <p><span id="numberOfQuestions{{ category.id }}">{{ category.number }} </span> / {{ category.number }}
                </p>
            </div>
        </div>
    {% endfor %}
{% endblock %}
{% block contentright %}
    <div class="row text-black p-2 m-2">
        <p>Fragen alle Kategorien: <br><span id="maxQuestionsAll"></span></p><br>
        <p>Fragen gew채hlte Kategorien: <br><span id="maxQuestionsSelected"></span></p><br>
    </div>
    <div class="row text-black p-2 m-2">
        <label for="currentVal"> Bitte Anzahl der Fragen w채hlen: <br></label><input type="number" id="currentVal"
                                                                                    name="range" value="0">
    </div>
    <div class="row text-black p-2 m-2">
        <button type="submit" class="btn-lg btn-primary">Auswahl best채tigen</button>
    </div>

    <div class="row text-black p-2 m-2"></div>
    <div class="row text-black p-2 m-2">
        <a href="/index">
            <label style="width: 100%" class="btn-lg btn-primary">Zum Hauptmen체</label>
        </a>
    </div>
{% endblock %}
