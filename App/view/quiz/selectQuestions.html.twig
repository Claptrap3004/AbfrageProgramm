{% extends "base.html.twig" %}

{% block title %} - select Questions{% endblock %}
{% block head %}

{% endblock %}
{% block subtitle %}
    Auswahl Fragen
{% endblock %}
{% block contentleft %}

    <div class="row p-2 m-2">
        <div class="col-lg-1 align-items-right text-right">
            <div class="form-check form-switch align-items-middle">
                <input class="form-check-input" type="checkbox" role="switch" id="categoryAll" checked
                       onclick="changeAllCategories()">
                <label class="form-check-label" for="categoryAll"></label>
            </div>
        </div>
        <div class="col-lg-2 text-start">
            <p>Select / Unselect All</p>
        </div>
        <div class="col-lg-6 text-center">
            <p> Category </p>
        </div>
        <div class="col-lg-1"></div>
        <div class="col-lg-2 text-start">
            <p>Fragen in Category</p>
        </div>

    </div>

    {% for category in categories %}
        <div class="row  p-2 m-2">
            <div class="col-lg-1 align-items-right">
                <div class="form-check form-switch align-middle">
                    <label class="form-check-label" for="categorySwitch{{ category.id }}">
                        <input type="hidden" id="maxQuestions{{ category.id }}" value="{{ category.number }}">
                        <input class="categories form-check-input" id="categorySwitch{{ category.id }}"
                               name="categories[]" type="checkbox" role="switch" value="{{ category.id }}"
                               onchange="clickCategory({{ category.id }})" checked>
                    </label>
                </div>
            </div>
            <div class="col-lg-1"></div>
            <div class="col-lg-7 bg-info rounded-3 text-left">
                {{ category.text }}
            </div>
            <div class="col-lg-1"></div>
            <div class="col-lg-2 bg-info rounded-3 text-end">
                <p><span id="numberOfQuestions{{ category.id }}">{{ category.number }} </span> / {{ category.number }}
                </p>
            </div>
        </div>

    {% endfor %}


{% endblock %}
{% block contentright %}
    {% set all = 0 %}
    {% for category in categories %}
    {% set all = all + category.number %}
    {% endfor %}
    <div class="row text-black pt-5 py-1 my-1">
        <div class="col text-start">
            <p>Fragen gesamt:</p>
        </div>
        <div class="col text-end">
            <p><span id="maxQuestions">{{ all }}</span> / {{ all }} </p>
        </div>
    </div>

    <div class="row text-black pt-5 py-1 my-1">
        <div class="col text-start">
            <p>Fragen gewählt:</p>
        </div>
            <label for="customRange"></label>
            <input type="range" name="range" class="form-range" min="1" max="{{ all }}" step="1" value="1"
                   id="customRange" oninput="trackVal(this)">
            <div class="row">
                <span id="currentVal">1</span>
            </div>
    </div>

{% endblock %}
{% block buttons %}
    <div class="row text-black p-5  my-1"></div>
    <div class="col-lg-6 align-items-center text-center">
        <a href="http://abfrageprogramm.ddev.site:8443/">
            <button class="btn-lg btn-primary">Zurück</button>
        </a>
    </div>
    <div class="col-lg-6 align-items-center text-center">
        <a href="http://abfrageprogramm.ddev.site:8443/select?categories=category[]&range=range">
            <button class="btn-lg btn-primary">Select Questions</button>
        </a>
    </div>


{% endblock %}
