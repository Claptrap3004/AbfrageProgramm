{% extends "base.html.twig" %}

{% block title %} Herzlich Willkommen {% endblock %}
{% block head %}

{% endblock %}
{% block subtitle %}
    Hallo {{ user.username }}, herzlich Willlkommen zum Quiz
{% endblock %}
{% block contentleft %}

{% endblock %}
{% block contentright %}
    <div class="card align-self-center bg-light rounded-3 mx-4 my-5 py-3">
        <div class="card-body rounded-3">
            <br>
            <h5 class="card-title">Statistik von #{{ user.username }}</h5>
            <br>
            <br>
            <p class="card-text">{{ stats.timesAsked }} Fragen beantwortet</p>
            <br>
            <p class="card-text">{{ stats.timesRight }} davon korrekt</p>
            <br>
            <p class="card-text">{{ stats.rate }} % Erfolgsquote</p>
        </div>
    </div>
{% endblock %}
{% block buttons %}
                <div class="align-items-center text-center">
                    <label>
                        <a href="https://abfrageprogramm.ddev.site:8443/QuizQuestion">
                            <button class="btn btn-primary">Schnellstart</button>
                        </a>
                    </label>
                </div>
{% endblock %}
