{% extends "base.html.twig" %}

{% block title %} Herzlich Willkommen {% endblock %}
{% block head %}

{% endblock %}
{% block subtitle %}
    Hallo {{ user.username }}, herzlich Willlkommen zum Quiz
{% endblock %}
{% block contentleft %}
    <div class="row row-cols-2 py-4 g-4 welcomeButtonDiv">
        <div class="col welcomeButton">
            <a id="quickstart" href="quizquestion/quickstart/">
                <label for="quickstart" class="labelWelcomeButton btn btn-primary btn-block w-100 h-100">
                    Schnellstart 50 Fragen alle Kategorien
                </label>
            </a>
        </div>
        <div class="col welcomeButton">
            <a href="User/account/">
                <label class="labelWelcomeButton btn btn-primary btn-block w-100 h-100">
                    Account
                </label>
            </a>
        </div>
        <div class="col welcomeButton">
            <a href="Stats/userdetail/">
                <label class="labelWelcomeButton btn btn-primary btn-block w-100 h-100">
                    Detailansicht Statistik
                </label>
            </a>
        </div>

        <div class="col welcomeButton">
            <a href="edit/">
                <label class="labelWelcomeButton btn btn-primary btn-block w-100 h-100">
                    Fragen verwalten
                </label>
            </a>
        </div>
    </div>
{% endblock %}
    {% block contentright %}
        <div class="card align-self-center bg-light rounded-3 mx-4 my-5 py-3">
            <div class="card-body rounded-3">
                <br>
                <h5 class="card-title">Statistik von #{{ user.username }}</h5>
                <br>
                <br>
                <p class="card-text">{{ stats.timesAsked }} Fragen beantwortet</p>
                <br>
                <p class="card-text">{{ stats.timesRight }} davon korrekt</p>
                <br>
                <p class="card-text">{{ stats.rate }} % Erfolgsquote</p>
            </div>
        </div>

    {% endblock %}
{% block buttons %}

{% endblock %}
