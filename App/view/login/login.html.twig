{% extends "base.html.twig" %}

{% block title %} Login Quiz {% endblock %}
{% block head %}

{% endblock %}
{% block subtitle %}
    Herzlich Willkommen beim Quiz
{% endblock %}
{% block contentleft %}
        <div class="row mb-3">
            <label for="inputUsername" class="col-sm-2 col-form-label" id="labelInputUsername" hidden="hidden">Username</label>
            <div class="col-sm-10">
                <input type="hidden" name='userName' class="form-control" id="inputUsername" placeholder="Username eingeben" >
            </div>
        </div>        <div class="row mb-3">
            <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" name='email' class="form-control" id="inputEmail" placeholder="Email eingeben">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputEmailValidate" class="col-sm-2 col-form-label" id="labelInputEmailValidate" hidden="hidden">Email</label>
            <div class="col-sm-10">
                <input type="hidden" name='emailValidate' class="form-control" id="inputEmailValidate" placeholder="Email wiederholen">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" name='password' class="form-control" id="inputPassword" placeholder="Password">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputPasswordValidate" class="col-sm-2 col-form-label" id="labelInputPasswordValidate" hidden="hidden">Password wiederholen</label>
            <div class="col-sm-10">
                <input type="hidden" name='passwordValidate' class="form-control" id="inputPasswordValidate" placeholder="Password">
            </div>
        </div>




{% endblock %}
{% block buttons %}
    <div class="align-items-center text-center">
        <div class="row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" id="confirm" name="loginUser" class="btn btn-primary">Sign in</button>
                <button type="Button" id="registerUser" name="registerUser" class="btn btn-primary" onclick="toggleLoginRegister(this)">go to Register</button>
            </div>
        </div>
    </div>
{% endblock %}

